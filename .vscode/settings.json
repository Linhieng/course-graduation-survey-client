{
    "files.exclude": {
        "node_modules": true,
        ".husky": true,
        "pnpm-lock.yaml": true,
        "commitlint.config.js": true,
        "babel.config.js": true,
        ".stylelintrc.js": true,
        ".eslintignore": true,
        ".eslintrc.js": true,
        "components.d.ts": true,
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "[vue][typescript][json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.detectIndentation": false,
        "editor.tabSize": 4,
        "editor.formatOnSave": true
    },
    "workbench.editor.customLabels.patterns": {
        // "src/views/**": "/${dirname}.${extname}",
        "src/**/index.ts": "/${dirname}.${extname}",
        "src/**/index.vue": "/${dirname}.${extname}",
        "src/**/types.ts": "/${dirname}-types.${extname}"
    },
    "cSpell.words": [
        "doption",
        "echart"
    ]
}
